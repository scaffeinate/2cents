<div id="comment-<%= comment.id %>" class="row">
  <div class="col-md-2">
    <%= link_to user_path(comment.user) do %>
      <%= render 'partials/avatar', user: comment.user, klass: 'avatar-sm' %>
    <% end %>
  </div>
  <div class="col-md-8">
    <b>@<%= comment.user.username %></b><br>
    <%= comment.content %>
  </div>
  <div class="col-md-2">
    <% if current_user == comment.user %>
      <%= render 'comments/delete_comment', comment: comment %>
    <% end %>
    <%= relative_time(comment.created_at) %>
  </div>
</div>
<br>
