<%= render 'partials/navbar_login', transparent: false %>
<div class="page-content">
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <div class="well">
          <h3>Change your password</h3>
          <hr>
          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
            <% if resource.errors.any? %>
              <div class="alert alert-danger alert-dismissable">
                <%= resource.errors.full_messages.first %>
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
              </div>
            <% end %>
            <%= f.hidden_field :reset_password_token %>
            <div class="form-group">
              <%= f.password_field :password, autofocus: true, autocomplete: "off", placeholder: "New password", class: 'form-control' %>
            </div>
            <div class="form-group">
              <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Repeat password",class: 'form-control' %>
            </div>
            <div class="form-group">
              <%= f.submit "Change password", class: 'btn btn-primary' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
