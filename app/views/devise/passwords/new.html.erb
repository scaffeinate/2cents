<%= render 'partials/navbar_login', transparent: false %>
<div class="page-content">
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <div class="well">
          <h3>Forgot your password?</h3>
          <hr>
          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
            <% if resource.errors.any? %>
              <div class="alert alert-danger alert-dismissable">
                <%= resource.errors.full_messages.first %>
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
              </div>
            <% end %>
            <div class="form-group">
              <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: 'Enter email to reset password' %>
            </div>
            <div class="form-group">
              <%= f.submit "Reset Password", class: 'btn btn-primary' %>
            </div>
          <% end %>
          <%= link_to "Log in", new_session_path(resource_name) %><br>
          <%= link_to "Didn't receive confirmation?", new_confirmation_path(resource_name) %><br>
        </div>
      </div>
    </div>
  </div>
</div>
